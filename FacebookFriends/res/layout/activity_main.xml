
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/image_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/me_image_description"
        android:src="@drawable/me" 
        android:layout_margin="5dp"
        />
    
    <TextView 
        android:id="@+id/name_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_me"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/me_name"
        />
    
    <TextView 
        android:id="@+id/surname_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_me"
        android:layout_below="@id/name_me"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/me_surname"
        />
    
    <TextView 
        android:id="@+id/birthday_me_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_me"
        android:layout_below="@id/surname_me"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/me_birth"
        />

    <TextView 
        android:id="@+id/birthday_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_me"
        android:layout_below="@id/birthday_me_lable"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        />
    
 <TextView 
        android:id="@+id/bio_me_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_me"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/me_bio"
        />   
        
 <TextView 
        android:id="@+id/bio_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio_me_lable"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        /> 
        
 <TextView 
        android:id="@+id/contacts_me_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bio_me"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="@string/me_contacts"
        /> 
    
 <TextView 
        android:id="@+id/contacts_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contacts_me_lable"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        />
 
</RelativeLayout>
</ScrollView>